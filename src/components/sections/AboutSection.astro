---
import Paragraph from '@components/Paragraph';
import Section from '../Section.astro';
import SkillsBox from '../SkillsBox.astro';
import WorkExperienceBox from '../WorkExperienceBox.astro';
const { aboutMe, skills, workExperiences } = Astro.props;
---

<Section styles='p-1 ' ids='about'>
  <div
    class='flex flex-col md:flex-row basis-0 gap-1 md:justify-between md:gap-[5rem] items-center w-full min-h-[85vh]'
  >
    <div class='box introduction w-[100%] md:w-[60%] p-5'>
      <div class='box-text'>
        <h3
          class='leading-[4rem] md:leading-[8rem] font-bold text-[4rem] md:text-[6rem]'
        >
          A propos de moi
        </h3>
        <Paragraph client:load text={aboutMe} />
        <h3
          class='leading-[4rem] md:leading-[8rem] font-bold text-[2rem] md:text-[4rem] ml-2 md:ml-4'
        >
          Comp√©tences
        </h3>
        <SkillsBox skills={skills} />
      </div>
    </div>
    <div
      class='info-box w-[100%] md:w-[30%] md:mr-5 justify-start flex flex-col gap-5'
    >
      <h3 class='heading text-slate-600 uppercase font-semibold ml-4'>
        Work Experience
      </h3>
      <WorkExperienceBox workExperiences={workExperiences} />
    </div>
  </div>
</Section>
