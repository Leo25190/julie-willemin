---
import Navbar from '../Navbar';
import Paragraph from '../Paragraph';
import Section from '../Section.astro';
import SelectedProjectBox from '../SelectedProjectBox.astro';
const { navLinks, myName, myBio, selectedProjects } = Astro.props;
---

<Section styles='p-1'>
  <Navbar navLinks={navLinks} client:load />
  <div
    class='mt-[3rem] md:mt-3 flex flex-col md:flex-row basis-0 gap-1 md:justify-between md:gap-[5rem] items-center w-full min-h-[80vh] md:min-h-[85vh]'
  >
    <div class='introduction w-[100%] md:w-[60%] p-5'>
      <div class='intro-text-box'>
        <h2
          class='text-primary intro-text text-brand leading-[4rem] md:leading-[8rem] font-bold text-[4rem] md:text-[5rem] lg:text-[6rem] xl:text-[7rem]'
        >
          {myName}
        </h2>
      </div>
      <Paragraph client:load text={myBio} />
    </div>
    <div
      class='projects w-[100%] md:w-[30%] md:mr-5 justify-start flex flex-col gap-5'
    >
      <h3 class='text-secondary heading uppercase font-semibold ml-4'>
        Projets et Bénévolat
      </h3>
      <SelectedProjectBox projects={selectedProjects} />
    </div>
  </div></Section
>
